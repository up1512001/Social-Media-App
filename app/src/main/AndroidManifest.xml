<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.socialmediaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_social_media"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_social_media"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialMediaApp">
        <activity android:name=".CreatePostActivity"></activity>
        <activity android:name=".SigninActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>